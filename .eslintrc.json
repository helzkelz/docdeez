{
  "root": true,
  "env": {
    "browser": true,
    "es2021": true,
    "node": true
  },
  "extends": [
    "eslint:recommended",
    "plugin:react/recommended",
    "plugin:react-hooks/recommended",
    "plugin:@docusaurus/recommended",
    "prettier"
  ],
  "settings": {
    "react": {
      "version": "detect"
    }
  },
  "parserOptions": {
    "ecmaVersion": "latest",
    "sourceType": "module"
  },
  "rules": {
    "react/prop-types": "off",
    "@docusaurus/prefer-docusaurus-heading": "off",
    "@docusaurus/no-html-links": "off"
  },
  "overrides": [
    {
      "files": ["docs/**/*"],
      "rules": {
        "react/react-in-jsx-scope": "off"
      }
    }
  ]
}
